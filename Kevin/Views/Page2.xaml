<UserControl x:Class="Kevin.Views.Page2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Kevin"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=local:Page1ViewModel}"
             mc:Ignorable="d">
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Text="Page 2" />
        <TextBlock d:Text="Page 2" Text="{Binding PageMessage}" Style="{DynamicResource HugeText}" />
    </Grid>
</UserControl>
